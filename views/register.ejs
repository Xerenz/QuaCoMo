	<%- include("partials/libraries") %> 

</head>


<body>
 
    <!-- Here goes navbar -->
	<nav class="navbar navbar-expand-md  navbar-dark bg-dark fixed-top">
		<a class="navbar-brand" href="/home"><%=__('brand')%></a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		  <span class="navbar-toggler-icon"></span>
		</button>
	  
		<div class="collapse navbar-collapse " id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto">
				<!-- <li class="nav-item active">
				  <a class="nav-link" href="/home"><%=__('home')%><span class="sr-only">(current)</span></a>
				</li>
				<li class="nav-item">
				  <a class="nav-link" href="#">Help</a>
				</li> -->
				
			  </ul>
			  <ul class="navbar-nav">
				  <li class="nav-item active">
					<a class="nav-link" href="/english">English</a>
				  </li>
				  <li class="nav-item active">
					<a class="nav-link" href="/malayalam">മലയാളം</a>
				  </li>
				</ul>
			
		</div>
		
	  </nav>

	  <!-- Header starts here -->
	<div class="space-100"></div>
	<div class="container">

		<div class="jumbotron jumbotron-fluid">
			<div class="container">
			  <h1 class="font-weight-lighter"><%=__('reg_title')%></h1>
			  <p class="lead"><%=__('reg_desc')%></p>
			</div>
		</div>
	</div>

	<!--  form starts here -->
    
    <!-- <div class="overlay">Loading</div> -->

    <div class="container">
		<% if(error) { %> <div class="alert alert-danger" role="alert"><%= error %> </div><% } %>

		<form action="/register" method="POST">

			<div class="form-group">
				<label for="name"><%=__('name')%></label>
				<input name="name" type="text" id="name"  class="form-control" required> 
			</div>
			<div class="form-group">
				<label for="username"><%=__('phone')%></label>
				<input name="username" type="text" id="phone" class="form-control" pattern="[0-9]{10}" placeholder="eg:8909765436" required>
			</div>
			<div class="form-group">
				<label for="email"><%=__('email')%></label>
				<input name="email" type="email" id="email"  class="form-control"> 
			</div>
			<div class="form-group">
				<label for="aadhar"><%=__('aadhar')%></label>
				<input name="aadhar" type="text" id="aadhar" class="form-control" pattern="[0-9]{12}" placeholder="eg:134287986543" required>
			</div>
			<div class="form-group">
				<label for="password"><%=__('password')%></label>
				<input name="password" type="password" id="pass" class="form-control" required>
			</div>
			<button type="submit" id="register" class="btn btn-dark">
				<%=__('reg')%>
			</button>

		</form>
		<br><br>
        <span><%=__('have_acc')%></span>
        <a href="/login"><%=__('login')%></a>

	</div><!-- container ends  -->
	

	
	
	<!-- Here is the footer -->

	<div class="space-100"></div>
	<div class="footer bg-dark"></div>

</body>

</html>