		<div class="jumbotron jumbotron-fluid">
			<div class="container">
			  <h1 class="font-weight-lighter">Report Shortage</h1>
			  <p class="lead">In case of shortage of necessary items in your area , report here.</p>
			</div>
		</div>
	</div>

	<!--  form starts here -->

	<div class="container">

		<form method="POST" action="/shop/addShop"	id="shopownerForm">
			<div class="form-group">
				<label>your Name : </label>
				<input class="form-control" type="text" name="name" id="name" required>
			</div>	
			<div class="form-group">
				<label>Phone Number : </label>
				<input class="form-control" type="text" name="phone" id="phone" required>
				<p id="phoneValidation"></p>
			</div>
			<!--
			<div>
				<label>Select State : </label>
				<select id="state"></select>
			</div>
			-->
			<div class="form-group">
				<label>Select District : </label>
				<select id="district" class="form-control"></select>
			</div>
			<div class="form-group">	
				<label>Select Panchayat / Muncipality : </label>
				<select id="panchayat" class="form-control"></select>
			</div>
			<div class="form-group">
				<label>Select locality : </label>
				<select id="locality" class="form-control"></select>
			</div>
			<div class="form-group">	
				<label>Items that are short in your area :</label> <br>
				<input type="checkbox" name="milk" id="milk" value="milk"> milk
				<input type="checkbox" name="groceries" id="groceries" value="groceries"> groceries
				<input type="checkbox" name="veg" id="veg" value="vegetables"> vegetables
				<!-- Add more items -->
			</div>	
			<div class="form-group">
				<input type="checkbox" id="declaration" required>
				<label for="declaration">
					<small>I hereby declare that the details furnished above are true and correct to the best of my knowledge.</small>
				</label>
	
			</div>
			
			<div>
				<button type="submit" id="submit" class="btn btn-dark">Report shortage</button>
			</div>
		</form>	
	</div>



